{
  "env": {
    "node": true,
    "es6": true
  },
  "plugins": ["babel"],
  "extends": "eslint:recommended",
  "parser": "babel-eslint",

  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "strict": 0,
    "no-console": "off"
  }
}
